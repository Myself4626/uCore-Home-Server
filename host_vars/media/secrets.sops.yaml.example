# Copy to host_vars/media.sops.yaml and encrypt:
#   sops -e -i host_vars/media.sops.yaml
# Only keys starting with "sops_" are encrypted (per .sops.yaml).

sops_cifs_media:
  username: "REPLACE_ME"
  password: "REPLACE_ME"
  domain: "OPTIONAL"  # Optional; remove if unused

# Required for Kometa -> Plex (for this host's Plex)
sops_plex_url: "http://127.0.0.1:32400"
sops_plex_token: "REPLACE_ME"

# Optional sources
sops_tmdb_api_key: "OPTIONAL"
sops_trakt_client_id: "OPTIONAL"
sops_trakt_client_secret: "OPTIONAL"
sops_mdblist_api_key: "OPTIONAL"
